		<sql condition="SELECT COUNT(*)=0 FROM #__raidplanner_class WHERE class_name='Druid'">	INSERT IGNORE INTO `#__raidplanner_class` (`class_color`, `class_name`, `class_css`) VALUES ('#FF7D0A',	'Druid', 'class_wow_druid')</sql>
		<sql condition="SELECT COUNT(*)=0 FROM #__raidplanner_class WHERE class_name='Monk'">		INSERT IGNORE INTO `#__raidplanner_class` (`class_color`, `class_name`, `class_css`) VALUES ('#558A84',	'Monk', 'class_wow_monk')</sql>

		<sql condition="SELECT COUNT(*)=0 FROM #__raidplanner_race WHERE race_name='Human'">		INSERT IGNORE INTO `#__raidplanner_race` (`race_name`) VALUES ('Human')</sql>
		<sql condition="SELECT COUNT(*)=0 FROM #__raidplanner_race WHERE race_name='Orc'">		INSERT IGNORE INTO `#__raidplanner_race` (`race_name`) VALUES ('Orc')</sql>
